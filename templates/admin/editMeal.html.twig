{% extends "base.html.twig" %}
{% block header %}
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			<a class="navbar-brand">Restaurant</a>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" href="#">
							Main Page
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">
							Order History
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">
							LogOut
						</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
{% endblock %}

{% block main %}
	<div style="height:94vh">

			{% for message in app.flashes('error') %}
				<div class="d-flex align-items-start justify-content-start"></div>
				<div class="alert alert-danger w-100 text-center">
					{{ message }}
				</div>
		{% endfor %}
		<form method="POST" action="{{path('edit_meal_db',{'id':ids})}}" style="height:91%">
	<div class="d-flex justify-content-center align-items-center flex-wrap flex-column " style="height:100%">
		<div class="d-flex align-items-start w-50">
			<span class="h2 text-white">Edit meal:
			</span>
		</div>

		<div class="input-group mb-3 w-50 ">
			<div class="input-group-prepend w-25">
				<span class="input-group-text" id="basic-addon1">Name</span>
			</div>
			<input type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" name="Name" value="{{meals.getMEALNAME()}}"required>
		</div>

		<div class="d-flex align-items-start w-50">
			<span class="h4 text-white">Small size:
			</span>
		</div>
		<div class="input-group mb-3 w-50 ">
			<div class="input-group-prepend w-25">
				<span class="input-group-text" id="basic-addon1">Price</span>
			</div>
			<input type="number" class="form-control"step="0.01" name="smallPrice" value="{{meals.getSMALLPRICE()}}" required>
		</div>

		<div class="d-flex align-items-start w-50">
			<span class="h4 text-white">Medium size:
			</span>
		</div>

		<div class="input-group mb-3 w-50 ">
			<div class="input-group-prepend w-25">
				<span class="input-group-text" id="basic-addon1">Price</span>
			</div>
			<input type="number" class="form-control" step="0.01" name="mediumPrice" value="{{meals.getMEDIUMPRICE()}}" required>
		</div>

		<div class="d-flex align-items-start w-50">
			<span class="h4 text-white">Large size:
			</span>
		</div>

		<div class="input-group mb-3 w-50 ">
			<div class="input-group-prepend w-25">
				<span class="input-group-text" id="basic-addon1">Price</span>
			</div>
			<input type="number" class="form-control" step="0.01" name="largePrice" value="{{meals.getLARGEPRICE()}}"required>
		</div>
		<div class="d-flex justify-content-between" style="width:50%">
			<button type="button" class="btn btn-danger">Abort</button>
			<button type="submit" class="btn btn-success">Apply changes</button>
		</div>
		</form>
	{% endblock %}
