{% extends "base.html.twig" %}
{% block header %}
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			<a class="navbar-brand">Restaurant</a>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" href="#">
							Main Page
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">
							LogOut
						</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
{% endblock %}

{% block main %}

	<div class="d-flex justify-content-center align-items-center flex-column" style="height:94vh">
		<div class="d-flex align-items-start w-50">
			<p class="text-white h3">Order details</p>
		</div>
		<table class="table table-dark w-50">
			<thead>
				<tr>
					<th scope="col">Name</th>
					<th scope="col">Size</th>
					<th scope="col">Quantity</th>
					<th scope="col">Price</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					{% for order in orders %}
						<th scope="col">{{order.getMEALNAME()}}</th>
						<th scope="col">{{order.getMEALSIZE()}}</th>
						<th scope="col">{{order.getQUANTITY()}}</th>
						<th scope="col">{{order.getPRICE()}}</th>
						
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div class="d-flex justify-content-between" style="width:49.5%">
			<p class="h2 text-white">Total Price:
			</p>
			<p class="h2 text-white">21.37
			</p>
		</div>

	{% endblock %}
