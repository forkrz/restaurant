{% extends "base.html.twig" %}

{% block main %}

	<div class="accordion accordion-flush w-100 pt-5" id="accordionFlushOne">
		{% for meal in meals %}
			<div class="d-flex align-items-center flex-column w-100">
				<div class="accordion-item w-50">
					<h2 class="accordion-header" id="flush-heading{{ loop.index }}">
						<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{ loop.index }}" aria-expanded="false" aria-controls="flush-collapse{{ loop.index }}">
							{{meal.getMEALNAME()}}
						</button>
					</h2>
					<div id="flush-collapse{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="flush-heading{{ loop.index }}" data-bs-parent="#accordionFlush{{ loop.index }}">
						<div class="accordion-body">
							<form>
								<div class="form-group d-flex justify-content-center flex-wrap">
									<div class="form-check form-check-inline">
										<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
										<label class="form-check-label" for="inlineRadio1">small</label>
									</div>
									<div class="form-check form-check-inline">
										<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2" checked>
										<label class="form-check-label" for="inlineRadio2">medium</label>
									</div>
									<div class="form-check form-check-inline">
										<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
										<label class="form-check-label" for="inlineRadio3">large</label>
									</div>
									<div class="d-flex align-items-center justify-content-center pt-1 flex-wrap w-100">
										<p class="pt-2">Quantity:</p>
										<div class="d-flex align-items-center justify-content-center flex-wrap w-100">
											<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-dash-circle" viewbox="0 0 16 16" data-field-id="{{loop.index}}" data-button-type="minus">
												<style>
													svg {
														cursor: pointer;
													}
												</style>
												<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
												<path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
											</svg><div class="col-sm-1 mx-2 form-rounded text-center" id="{{loop.index}}">1</div><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-plus-circle" viewbox="0 0 16 16" data-field-id="{{loop.index}}" data-button-type="plus">
												<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
												<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
											</svg>
											<div class="d-flex justify-content-center w-100">
											<p class="pt-2">Price:</p>
											</div>
											<div class="d-flex justify-content-center">
												<p>{{meal.getMEDIUMPRICE()}}
												</p>
											</div>
										</div>

									</div>

								</div>
							</div>
						</div>
					</form>

				</div>
			{% endfor %}

		</div>
		<div class="d-flex align-items-center flex-column w-50 mx-auto">
			<button type="button" class="btn btn-primary py-2 px-5 mt-3">Place Order</button>
		</div>
	{% endblock %}
